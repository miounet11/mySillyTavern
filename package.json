{
  "name": "sillytavern-perfect-clone",
  "version": "1.0.0",
  "description": "Perfect clone of SillyTavern AI chat interface with enhanced features",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "start": "turbo run start --filter=web",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:setup": "turbo run db:setup --filter=database",
    "db:migrate": "turbo run db:migrate --filter=database",
    "db:migrate-user-system": "tsx scripts/migrate-to-user-system.ts",
    "db:studio": "turbo run db:studio --filter=database",
    "db:seed": "turbo run db:seed --filter=database",
    "db:reset": "turbo run db:reset --filter=database",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "ci": "npm run lint && npm run type-check && npm run test:unit && npm run build",
    "release": "npm run ci && npm run build",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.14",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.2",
  "keywords": [
    "ai",
    "chat",
    "roleplay",
    "llm",
    "sillytavern",
    "typescript",
    "nextjs"
  ],
  "author": "SillyTavern Perfect Clone Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sillytavern-perfect-clone.git"
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "canvas": "^2.11.2",
    "pngjs": "^7.0.0"
  }
}