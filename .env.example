# Database Configuration
DATABASE_URL="file:./dev.db"

# Application Configuration
NEXT_PUBLIC_APP_NAME="SillyTavern Perfect Clone"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Authentication (for future user system)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# AI Provider API Keys
# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_BASE_URL="https://api.openai.com/v1"

# Anthropic Claude Configuration
ANTHROPIC_API_KEY="your-anthropic-api-key-here"
ANTHROPIC_BASE_URL="https://api.anthropic.com"

# Local AI Model Configuration
LOCAL_AI_BASE_URL="http://localhost:5000/api"
LOCAL_AI_API_KEY=""  # Optional, if your local API requires authentication

# NovelAI Configuration (if using)
NOVELAI_API_KEY="your-novelai-api-key-here"
NOVELAI_BASE_URL="https://api.novelai.net"

# AI Horde Configuration (if using)
HORDE_API_KEY="your-horde-api-key-here"
HORDE_BASE_URL="https://stablehorde.net/api/v2"

# File Storage Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,text/plain,application/json"

# Security Configuration
ENCRYPTION_KEY="your-32-character-encryption-key-here"
CORS_ORIGIN="http://localhost:3000"
RATE_LIMIT_WINDOW="60000"  # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Logging Configuration
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FILE_PATH="./logs/app.log"

# Performance Configuration
NODE_ENV="development"
PORT="3000"
HOST="localhost"

# Analytics and Monitoring (optional)
GOOGLE_ANALYTICS_ID=""  # GA4 measurement ID
SENTRY_DSN=""  # Sentry error tracking
VERCEL_ANALYTICS_ID=""  # Vercel analytics

# Feature Flags
ENABLE_ANALYTICS="false"
ENABLE_ERROR_REPORTING="false"
ENABLE_PERFORMANCE_MONITORING="true"
ENABLE_PLUGINS="true"
ENABLE_WORLD_INFO="true"
ENABLE_EXPORT_IMPORT="true"

# Development Configuration
ENABLE_MOCK_API="false"
ENABLE_DEBUG_MODE="true"
ENABLE_HOT_RELOAD="true"

# Plugin Configuration
PLUGIN_DIRECTORY="./plugins"
PLUGIN_MAX_MEMORY="536870912"  # 512MB in bytes
PLUGIN_TIMEOUT="30000"  # 30 seconds in milliseconds

# Cache Configuration
CACHE_TTL="3600"  # 1 hour in seconds
CACHE_MAX_SIZE="1000"  # Maximum number of cached items

# Background Jobs Configuration
JOB_QUEUE_CONCURRENCY="5"
JOB_RETRY_ATTEMPTS="3"
JOB_RETRY_DELAY="5000"  # 5 seconds in milliseconds

# Email Configuration (for future notifications)
SMTP_HOST=""  # SMTP server hostname
SMTP_PORT="587"  # SMTP port
SMTP_USER=""  # SMTP username
SMTP_PASS=""  # SMTP password
SMTP_FROM=""  # From email address

# Backup Configuration
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *"  # Cron expression (2 AM daily)
BACKUP_DIRECTORY="./backups"
BACKUP_RETENTION_DAYS="30"